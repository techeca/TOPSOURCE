{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build server",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "/p:Configuration=Release", 
                "/p:Platform=Win32", 
                "${workspaceFolder}/source/Server.sln", // replace with your server.sln path
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": "$msCompile"
        }
    ]
}